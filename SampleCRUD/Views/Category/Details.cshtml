@model Category
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="container">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name) :
        </dt>

        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DisplayOrder) :
        </dt>

        <dt class="col-sm-10">
            @Html.DisplayFor(model => model.DisplayOrder)
        </dt>
    </dl>
    <div class="row">
        <div class="col-sm-2">
            <a asp-controller="Category" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-primary mt-2">Edit</a>
        </div>
        <div class="col-sm-2">
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary mt-2">Back to list</a>
        </div>
    </div>
